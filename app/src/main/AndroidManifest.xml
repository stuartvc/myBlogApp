<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stuartvancampen.myblog" >

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".session.MyBlogApplication"
        >

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.list.UsersActivity"
            android:label="@string/user_list_activity_label"
            />
        <activity
            android:name=".user.profile.UserProfileActivity"
            android:label="@string/user_profile_activity_label">
            <intent-filter android:label="@string/user_profile_activity_label">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://recipe-app.com/recipes" -->
                <data android:scheme="https"
                    android:host="dry-tor-1032.herokuapp.com"
                    android:pathPrefix="/users" />
            </intent-filter>
            </activity>
        <activity
            android:name=".post.UsersPostsActivity"
            android:label="@string/posts_activity_label"
            />
        <activity
            android:name=".post.PostsActivity"
            android:label="@string/posts_activity_label"
            />
        <activity
            android:name=".post.PostViewActivity"
            android:label="@string/post_view_activity_label"
            />
        <activity
            android:name=".login.SignUpActivity"
            android:label="@string/sign_up_activity_label"
            />
    </application>

</manifest>
